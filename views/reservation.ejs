<!-- views/reservation.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Reservation</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Data security Project</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <li class="nav-item">
              <a class="btn btn-light ml-2" href="/reservation">My Reservation</a>
            </li>
            <li class="nav-item ml-5">
              <a class="btn btn-danger" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </nav>
    <div class="container py-sm-5">
        <div class="card">
            <div class="card-body text-center">
                <h2 >My Reservations</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Name</th>
                            <th>Car</th>
                            <th>วันเริ่มจอง</th>
                            <th>วันสิ้นสุดการจอง</th>
                            <th>ราคาทั้งหมด</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% reservations.forEach(function(reservation) { %>
                            <tr>
                                <td><%= reservation.reservation_id %></td>
                                <td><%= reservation.user_name %></td>
                                <td><%= reservation.car_name %></td>
                                <td><%= reservation.start_date %></td>
                                <td><%= reservation.end_date %></td>
                                <td><%= reservation.total_cost %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="text-right mt-3">
            <a href="/" class="btn btn-secondary">ย้อนกลับ</a>
        </div>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua4Hp6E5x3W5xnJOT0lH4WnXQ+qclMlqf1mQm1F5zz3lw2R5z5Y7F5B9w2" 
    crossorigin="anonymous"></script>
</body>

</html>
